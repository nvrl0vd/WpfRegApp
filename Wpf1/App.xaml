<Application x:Class="Wpf1.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Wpf1"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <Style TargetType="TextBlock" x:Key="HeaderAppl">
            <Setter Property="FontSize" Value="18pt"/>
            <Setter Property="FontWeight" Value="UltraBold"/>
            <Setter Property="FontFamily" Value="Segoe UI Semibold"/>
            <Setter Property="Foreground" Value="#FF1734B4"/>
        </Style>

        <Style TargetType="Button" x:Key="BtnS1">
            <Setter Property="Width" Value="113.5"/>
            <Setter Property="Height" Value="25"/>
            <Setter Property="Background" Value="LightCyan"/>
            <Setter Property="Margin" Value="1"/>
            <Setter Property="Foreground">
                <Setter.Value>
                    <RadialGradientBrush>
                        <GradientStop Color="#FF1734B4" Offset="0"/>
                        <GradientStop Color="#FF6AA7FF" Offset="1"/>
                    </RadialGradientBrush>
                </Setter.Value>
            </Setter>

        </Style>
         
    </Application.Resources>
</Application>
